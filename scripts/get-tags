#!/bin/bash
#
# Get tag information from database (no API server needed)
#
# Usage:
#   ./scripts/get-tags                    # List all tags
#   ./scripts/get-tags --popular          # Show popular tags
#   ./scripts/get-tags --search "pge"     # Search tags
#

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

cd "$PROJECT_ROOT"

python3 document-processor/src/document_processor/cli/get-tags.py "$@"