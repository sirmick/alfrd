#!/bin/bash
# Stop all ALFRD services running in screen sessions

echo "ðŸ›‘ Stopping ALFRD services..."
echo

# Kill screen sessions
sessions=("alfrd-api" "alfrd-processor" "alfrd-webui")

for session in "${sessions[@]}"; do
    if screen -ls | grep -q "$session"; then
        echo "   Stopping $session..."
        screen -S "$session" -X quit
    else
        echo "   âš ï¸  $session not running"
    fi
done

echo
echo "âœ… All services stopped"
echo
echo "ðŸ“‹ Remaining screen sessions:"
screen -ls 2>/dev/null || echo "   None"