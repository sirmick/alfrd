# AWS Credentials (required for Textract OCR and Bedrock LLM)
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-east-1

# Bedrock Configuration
# BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0  # Requires authorization
BEDROCK_MODEL_ID=us.amazon.nova-lite-v1:0  # Using Nova Lite inference profile
BEDROCK_MAX_TOKENS=4096

# Database Path (use ./data for local dev, /data for Docker)
DATABASE_PATH=./data/alfrd.db

# Directory Paths (use ./data for local dev, /data for Docker)
INBOX_PATH=./data/inbox
DOCUMENTS_PATH=./data/documents
SUMMARIES_PATH=./data/summaries
EXPORTS_PATH=./data/exports

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
MCP_PORT=3000

# Logging
LOG_LEVEL=INFO

# Environment
ENV=development